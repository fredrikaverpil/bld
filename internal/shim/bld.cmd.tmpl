@echo off
setlocal EnableDelayedExpansion

set "BLD_DIR={{.BldDir}}"
set "BLD_CONTEXT={{.Context}}"

rem Insert -v before -- if present, otherwise append it.
set "ARGS="
set "FOUND_SEP=0"
for %%a in (%*) do (
    if "%%a"=="--" (
        set "ARGS=!ARGS! -v --"
        set "FOUND_SEP=1"
    ) else (
        set "ARGS=!ARGS! %%a"
    )
)
if "!FOUND_SEP!"=="0" set "ARGS=!ARGS! -v"

go run -C "%BLD_DIR%" .%ARGS%
